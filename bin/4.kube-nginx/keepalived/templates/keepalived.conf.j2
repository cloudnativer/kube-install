global_defs {
   router_id LVS_k8s
}

vrrp_script Checkk8s {
    script "/etc/keepalived/check_http.sh"
    interval 2
}

vrrp_instance VI_1 {
    state MASTER
    interface {{ens.stdout}}
    virtual_router_id 100
    priority {{priority}}
    advert_int 1
    mcast_src_ip {{ip}}
    nopreempt
    authentication {
        auth_type paasadmin
        auth_pass 12345678
    }
    virtual_ipaddress {
        {{keepalived_vip}}
    }
    track_script {
        Checkk8s
    }
}