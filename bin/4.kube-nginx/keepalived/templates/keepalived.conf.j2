global_defs {
    router_id LVS_k8s
    script_user root
    enable_script_security
}

vrrp_script Checkk8s {
    script "/etc/keepalived/check_http.sh"
    interval 2
    fall 3
}

vrrp_instance VI_1 {
    state MASTER
    interface {{ens.stdout}}
    virtual_router_id 100
    priority {{priority}}
    advert_int 1
    mcast_src_ip {{ip}}
    nopreempt
    authentication {
        auth_type PASS
        auth_pass 20200409
    }
    virtual_ipaddress {
        {{master_vip}}
    }
    track_script {
        Checkk8s
    }
}
