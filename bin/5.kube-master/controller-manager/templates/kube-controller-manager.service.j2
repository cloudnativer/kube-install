[Unit]
Description=Kubernetes Controller Manager
Documentation=https://github.com/GoogleCloudPlatform/kubernetes

[Service]
WorkingDirectory={{k8s_install_home}}/kubernetes/kube-controller-manager/
ExecStart=/usr/local/bin/kube-controller-manager \
--address=127.0.0.1 \
--master=http://127.0.0.1:6334 \
--allocate-node-cidrs=true \
  --service-cluster-ip-range={{service_cidr}} \
  --cluster-cidr={{pod_cidr}} \
--node-cidr-mask-size=25 \
–-node-monitor-period=5s \
–-node-monitor-grace-period=35s \
–-pod-eviction-timeout=31s \
--cluster-name=kubernetes \
--cluster-signing-cert-file=/etc/kubernetes/ssl/k8s-root-ca.pem \
--cluster-signing-key-file=/etc/kubernetes/ssl/k8s-root-ca-key.pem \
--service-account-private-key-file=/etc/kubernetes/ssl/k8s-root-ca-key.pem \
--root-ca-file=/etc/kubernetes/ssl/k8s-root-ca.pem \
--experimental-cluster-signing-duration=876000h \
--leader-elect=true \
--logtostderr=false \
  --log-dir={{k8s_install_home}}/kubernetes/kube-controller-manager/ \
--v=2
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

